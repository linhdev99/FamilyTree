<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_ui_circle_heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_tree_family"
                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                app:layout_constraintEnd_toEndOf="@+id/imageView1"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="@+id/imageView1"
                app:layout_constraintTop_toTopOf="@+id/imageView1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="172dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/login_upper"
                android:textColor="@color/theme_text_1"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="302dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/ui_login_textbox" />

            <EditText
                android:id="@+id/input_username"
                android:layout_width="280dp"
                android:layout_height="46dp"
                android:layout_marginTop="24dp"
                android:autofillHints=""
                android:drawableStart="@drawable/ic_username"
                android:drawablePadding="10sp"
                android:ems="10"
                android:hint="Tên đăng nhập"
                android:inputType="textPersonName"
                android:nestedScrollingEnabled="false"
                android:singleLine="false"
                android:textColor="#3C3F41"
                android:textColorHighlight="#C8E6C9"
                android:textColorHint="#BDBDBD"
                android:textColorLink="#388E3C"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="280dp"
                android:layout_height="42dp"
                android:layout_marginBottom="24dp"
                android:autofillHints=""
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="10sp"
                android:ems="11"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:nestedScrollingEnabled="false"
                android:singleLine="false"
                android:textColor="#3C3F41"
                android:textColorHighlight="#C8E6C9"
                android:textColorHint="#BDBDBD"
                android:textColorLink="#388E3C"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3" />

            <Button
                android:id="@+id/button"
                android:layout_width="184dp"
                android:layout_height="67dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/ui_button_violet_control"
                android:drawableStart="@drawable/ic_baseline_lock_open_24"
                android:drawablePadding="5sp"
                android:fontFamily="@font/roboto_medium"
                android:padding="20sp"
                android:text="@string/login_upper"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintVertical_bias="0.298" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>